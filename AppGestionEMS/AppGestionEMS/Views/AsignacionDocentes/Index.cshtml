@model IEnumerable<AppGestionEMS.Models.AsignacionDocentes>

@{
    ViewBag.Title = "Asignación de docentes";
}
<div class="container container-fluid">

    <h2>Asignación de docentes</h2>

    <p>
        <span>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <span class="fa fa-plus-square-o fa-lg"></span>
                Nuevo docente
            </a>
        </span>
    </p>
    <table id="etsisitravel" class="table table-striped table-hover table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.Curso.Cod_Curso)
                </th>
                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.GrupoClases.Cod_Grupo)
                </th>
                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.User.Name)
                </th>
                <th class="bg-primary"></th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso.Cod_Curso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrupoClases.Cod_Grupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.NameSurname)
                </td>
                <td>
                    <span>
                        <a href="@Url.Action("Edit", "AsignacionDocentes", new { id = item.Id })" class="btn btn-success">
                            <span class="fa fa-pencil-square-o fa-lg"></span>
                            Editar
                        </a>
                    </span>
                    <span>
                        <a href="@Url.Action("Details", "AsignacionDocentes", new { id = item.Id })" class="btn btn-primary">
                            <span class="fa fa-eye fa-lg"></span>
                            Detalles
                        </a>
                    </span>
                    <span>
                        <a href="@Url.Action("Delete", "AsignacionDocentes", new { id = item.Id })" class="btn btn-danger">
                            <span class="fa fa-trash-o fa-lg"></span>
                            Eliminar
                        </a>
                    </span>               
                
                
                </td>
            </tr>
        }

    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
            $('#etsisitravel').dataTable({
                "columnDefs": [
                  { "width": "20%", "targets": [0, 1, 2] },
                  { "width": "40%", "targets": "_all" },
                  { "className": "text-center", "targets": "_all" }
                ],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                }
            });
    </script>
}
