        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Curso.Cod_Curso)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Curso.Cod_Curso)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.User.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.NameSurname)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Convocatoria)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Convocatoria)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Trabajo1)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Trabajo1)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Trabajo2)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Trabajo2)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Trabajo3)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Trabajo3)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Test)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Test)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Practica)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Practica)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash-o fa-lg"></i> Borrar
                </button>
                <span>
                    <a href="@Url.Action("Index", "Evaluaciones" )" class="btn btn-primary">
                        <span class="fa fa-undo fa-lg"></span>
                        Volver a la lista
                    </a>
                </span>

            </div>

        }
