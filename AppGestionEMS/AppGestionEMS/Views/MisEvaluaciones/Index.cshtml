@model IEnumerable<AppGestionEMS.Models.Evaluaciones>

@{
    ViewBag.Title = "Mis evaluaciones";
}
<div class="container container-fluid">

    <h2>Mis evaluaciones</h2>


    <table id="etsisitravel" class="table table-striped table-hover table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.Curso.Cod_Curso)
                </th>
                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.User.Name)
                </th>
                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.Convocatoria)
                </th>
                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.Trabajo1)
                </th>
                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.Trabajo2)
                </th>
                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.Trabajo3)
                </th>
                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.Test)
                </th>
                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.Practica)
                </th>
                <th class="bg-primary"></th>
            </tr>
        </thead> 
        

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Curso.Cod_Curso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.NameSurname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Convocatoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trabajo1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trabajo2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trabajo3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Test)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Practica)
                </td>
                <td>
                    <span>
                        <a href="@Url.Action("Details", "MisEvaluaciones", new { id = item.Id })" class="btn btn-primary">
                            <span class="fa fa-eye fa-lg"></span>
                            Detalles
                        </a>
                    </span>
                </td>
            </tr>
        }

    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
            $('#etsisitravel').dataTable({
                "columnDefs": [
                  { "width": "5%", "targets": [0] },
                  { "width": "40%", "targets": [1] },
                  { "width": "5%", "targets": [2] },
                  { "width": "5%", "targets": [3, 4, 5, 6, 7] },
                  { "width": "20%", "targets": "_all" },
                  { "className": "text-center", "targets": "_all" }
                ],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                }
            });
    </script>
}
